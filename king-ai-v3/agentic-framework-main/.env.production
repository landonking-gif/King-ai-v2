# =============================================================================
# King AI v3 - Production Environment Configuration
# =============================================================================
# This file contains all credentials and settings for the agentic framework.
# Merged from king-ai-v2 settings for continuity.
# =============================================================================

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Local/Ollama (Primary for AWS deployment)
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_URL=http://localhost:11434
LOCAL_MODEL=qwen3:32b
OLLAMA_MODEL=llama3.2:1b

# OpenAI (Optional)
OPENAI_API_KEY=

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=

# Google Gemini (Optional)
GEMINI_API_KEY=

# Primary model selection
PRIMARY_MODEL=ollama

# =============================================================================
# Kautilya CLI Configuration
# =============================================================================

KAUTILYA_MAX_ITERATIONS=10
KAUTILYA_SHOW_ITERATION_DETAILS=true
KAUTILYA_SHOW_THINKING_ANIMATION=true
KAUTILYA_VERBOSE_MODE=false
KAUTILYA_MAX_TOKENS=16000
KAUTILYA_MAX_CONTINUATIONS=5
KAUTILYA_WEBSEARCH_PROVIDER=duckduckgo
KAUTILYA_ANIMATIONS=true
KAUTILYA_DISPLAY_MODE=detailed
KAUTILYA_OUTPUT_MODE=verbose
KAUTILYA_AUTO_INSTALL_PACKAGES=true
KAUTILYA_SHOW_QUERY_STATS=true
KAUTILYA_DYNAMIC_FOLLOWUPS=true

# =============================================================================
# Deep Research Configuration
# =============================================================================

DEEP_RESEARCH_MIN_SOURCES=15
DEEP_RESEARCH_MAX_SOURCES=30
DEEP_RESEARCH_SEARCH_RESULTS=20

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (for memory service and persistent data)
POSTGRES_URL=postgresql://user:password@localhost:5432/agentic_framework
DATABASE_URL=sqlite+aiosqlite:///./kingai.db

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Vector Database
# =============================================================================

MILVUS_URL=http://localhost:19530
CHROMA_PATH=./data/chroma

# =============================================================================
# Object Storage (S3/MinIO)
# =============================================================================

MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=agent-artifacts

# =============================================================================
# Service Ports
# =============================================================================

# Orchestrator / Main API (Dashboard connects here)
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000

# Control Panel (Web UI)
CONTROL_PANEL_PORT=3000

# Memory Service
MEMORY_SERVICE_PORT=8002

# MCP Gateway
MCP_GATEWAY_URL=http://localhost:8080
MCP_GATEWAY_PORT=8080

# =============================================================================
# Security
# =============================================================================

JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
EPHEMERAL_TOKEN_TTL_MINUTES=15

# =============================================================================
# Observability
# =============================================================================

OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9090

# =============================================================================
# Memory Configuration
# =============================================================================

MEMORY_SESSION_TTL_HOURS=72
MEMORY_RETENTION_YEARS=2
MEMORY_COMPACTION_THRESHOLD_TOKENS=8000

# =============================================================================
# Ralph Autonomous Agent Configuration
# =============================================================================

RALPH_MAX_ITERATIONS=100
RALPH_MAX_RETRIES_PER_STORY=3
RALPH_MEMORY_SERVICE_URL=http://localhost:8002

# =============================================================================
# Risk Management (from King AI v2)
# =============================================================================

RISK_PROFILE=moderate
ENABLE_AUTONOMOUS_MODE=false
MAX_AUTO_APPROVE_AMOUNT=100.0
